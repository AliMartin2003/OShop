@{
    ViewData["Title"] = "Home Page";
    List<OShop.DataLayer.Entities.Product> Products = ViewBag.Products as List<OShop.DataLayer.Entities.Product>;
}
<!-- Carousel -->
<section id="home">
    <div id="mainCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active" data-bs-interval="5000">
                <img src="https://via.placeholder.com/1920x500?text=اسلاید+1" class="d-block w-100" alt="اسلاید 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>تخفیف ویژه تابستانه</h5>
                    <p>تا 50% تخفیف برای محصولات منتخب</p>
                    <a href="#" class="btn btn-primary btn-lg">همین حالا خرید کنید</a>
                </div>
            </div>
            <div class="carousel-item" data-bs-interval="5000">
                <img src="https://via.placeholder.com/1920x500?text=اسلاید+2" class="d-block w-100" alt="اسلاید 2">
            </div>
            <div class="carousel-item" data-bs-interval="5000">
                <img src="https://via.placeholder.com/1920x500?text=اسلاید+3" class="d-block w-100" alt="اسلاید 3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">قبلی</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">بعدی</span>
        </button>
    </div>
</section>

<!-- New Products -->
<section id="products" class="py-5 bg-white">
    <div class="container">
        <h2 class="section-title">جدیدترین محصولات</h2>
        <div class="row">
            <!-- Product 1 -->
            @foreach(var item in Products)
            {
                <div class="col-md-6 col-lg-3">
                <div class="card product-card h-100">
                    <span class="badge badge-sale position-absolute text-white">20% تخفیف</span>
                    <img src="/Images/Prodcuts/org/@item.Thumbnail" class="card-img-top product-img" alt="محصول 1">
                    <div class="card-body">
                        <h5 class="card-title">@item.ProductName</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-danger"><del>@item.Price تومان</del></span>
                                <span class="fw-bold">@item.Price تومان</span>
                            </div>
                            <span class="text-warning">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <button class="btn btn-primary w-100">افزودن به سبد خرید</button>
                    </div>
                </div>
            </div>
            }
            
            <!-- Product 2 -->
            <div class="col-md-6 col-lg-3">
                <div class="card product-card h-100">
                    <img src="https://via.placeholder.com/300x200?text=محصول+2" class="card-img-top product-img" alt="محصول 2">
                    <div class="card-body">
                        <h5 class="card-title">محصول نمونه 2</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="fw-bold">950,000 تومان</span>
                            </div>
                            <span class="text-warning">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                                <i class="far fa-star"></i>
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <button class="btn btn-primary w-100">افزودن به سبد خرید</button>
                    </div>
                </div>
            </div>
            
            <!-- Product 3 -->
            <div class="col-md-6 col-lg-3">
                <div class="card product-card h-100">
                    <img src="https://via.placeholder.com/300x200?text=محصول+3" class="card-img-top product-img" alt="محصول 3">
                    <div class="card-body">
                        <h5 class="card-title">محصول نمونه 3</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="fw-bold">1,750,000 تومان</span>
                            </div>
                            <span class="text-warning">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half-alt"></i>
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <button class="btn btn-primary w-100">افزودن به سبد خرید</button>
                    </div>
                </div>
            </div>
            
            <!-- Product 4 -->
            <div class="col-md-6 col-lg-3">
                <div class="card product-card h-100">
                    <span class="badge badge-sale position-absolute text-white">10% تخفیف</span>
                    <img src="https://via.placeholder.com/300x200?text=محصول+4" class="card-img-top product-img" alt="محصول 4">
                    <div class="card-body">
                        <h5 class="card-title">محصول نمونه 4</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-danger"><del>2,200,000 تومان</del></span>
                                <span class="fw-bold">1,980,000 تومان</span>
                            </div>
                            <span class="text-warning">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <button class="btn btn-primary w-100">افزودن به سبد خرید</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-5">
            <a href="#" class="btn btn-outline-primary btn-lg">مشاهده همه محصولات <i class="fas fa-arrow-left ms-2"></i></a>
        </div>
    </div>
</section>

<!-- Counter Section -->
<section class="counter-section">
    <div class="container">
        <div class="row">
            <div class="col-6 col-md-3">
                <div class="counter-box">
                    <i class="fas fa-box-open fa-3x mb-3"></i>
                    <div class="counter" data-target="1250">0</div>
                    <p>محصولات</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="counter-box">
                    <i class="fas fa-users fa-3x mb-3"></i>
                    <div class="counter" data-target="8500">0</div>
                    <p>مشتریان</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="counter-box">
                    <i class="fas fa-truck fa-3x mb-3"></i>
                    <div class="counter" data-target="3200">0</div>
                    <p>سفارشات</p>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="counter-box">
                    <i class="fas fa-store fa-3x mb-3"></i>
                    <div class="counter" data-target="15">0</div>
                    <p>سال تجربه</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Us -->
<section id="about" class="py-5 bg-white">
    <div class="container">
        <h2 class="section-title">درباره ما</h2>
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="https://via.placeholder.com/600x400?text=درباره+ما" alt="درباره ما" class="img-fluid rounded shadow">
            </div>
            <div class="col-lg-6">
                <h3 class="mb-4">فروشگاه اینترنتی ما</h3>
                <p class="text-muted">لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی تکنولوژی مورد نیاز و کاربردهای متنوع با هدف بهبود ابزارهای کاربردی می باشد.</p>
                <p class="text-muted">کتابهای زیادی در شصت و سه درصد گذشته، حال و آینده شناخت فراوان جامعه و متخصصان را می طلبد تا با نرم افزارها شناخت بیشتری را برای طراحان رایانه ای علی الخصوص طراحان خلاقی و فرهنگ پیشرو در زبان فارسی ایجاد کرد.</p>
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-primary me-2"></i>
                            <span>ضمانت اصل بودن کالا</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-primary me-2"></i>
                            <span>پشتیبانی 24 ساعته</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-primary me-2"></i>
                            <span>تحویل سریع</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-primary me-2"></i>
                            <span>پرداخت در محل</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Us -->
<section id="contact" class="py-5 contact-section">
    <div class="container">
        <h2 class="section-title">تماس با ما</h2>
        <div class="row">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <form id="contactForm">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <input type="text" class="form-control" placeholder="نام شما" required>
                        </div>
                        <div class="col-md-6 mb-4">
                            <input type="email" class="form-control" placeholder="ایمیل شما" required>
                        </div>
                    </div>
                    <div class="mb-4">
                        <input type="text" class="form-control" placeholder="موضوع">
                    </div>
                    <div class="mb-4">
                        <textarea class="form-control" rows="5" placeholder="پیام شما" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">ارسال پیام</button>
                </form>
            </div>
            <div class="col-lg-6">
                <div class="card border-0 shadow">
                    <div class="card-body p-4">
                        <h4 class="mb-4">اطلاعات تماس</h4>
                        <div class="d-flex align-items-start mb-4">
                            <i class="fas fa-map-marker-alt text-primary mt-1 me-3"></i>
                            <div>
                                <h5 class="mb-1">آدرس</h5>
                                <p class="mb-0 text-muted">تهران، خیابان آزادی، کوچه شهید فلانی، پلاک 12</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-start mb-4">
                            <i class="fas fa-phone-alt text-primary mt-1 me-3"></i>
                            <div>
                                <h5 class="mb-1">تلفن</h5>
                                <p class="mb-0 text-muted">021-12345678</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-start mb-4">
                            <i class="fas fa-envelope text-primary mt-1 me-3"></i>
                            <div>
                                <h5 class="mb-1">ایمیل</h5>
                                <p class="mb-0 text-muted">info@example.com</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-start">
                            <i class="fas fa-clock text-primary mt-1 me-3"></i>
                            <div>
                                <h5 class="mb-1">ساعات کاری</h5>
                                <p class="mb-0 text-muted">شنبه تا پنجشنبه: 8 صبح تا 5 بعدازظهر</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
